{
  "openapi": "3.0.1",
  "info": {
    "title": "Gateway API",
    "version": "v1"
  },
  "servers": [
    {
      "url": "http://localhost:3000"
    }
  ],
  "tags": [
    {
      "name": "Converter API functions",
      "description": "Converter API functions of Notes recognition"
    },
    {
      "name": "Nodes API functions",
      "description": "API functions to manage nodes"
    }
  ],
  "paths": {
    "/converter/{id}": {
      "get": {
        "summary": "Return simple string",
        "tags": [
          "Converter API functions"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "simple parameter",
            "schema": {
              "type": "string",
              "example": "1"
            }
          }
        ],
        "description": "parameter id just for test",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "document": {
                "schema": {
                  "type": "string",
                  "example": "some text"
                }
              }
            }
          }
        }
      }
    },
    "/converter/notes": {
      "post": {
        "summary": "Converts MIDI file to notes",
        "tags": [
          "Converter API functions"
        ],
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "required": "true",
                "type": "object",
                "properties": {
                  "file": {
                    "required": "true",
                    "type": "string",
                    "format": "binary"
                  }
                }
              }
            }
          }
        },
        "description": "desc",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/converter/midi": {
      "post": {
        "summary": "Converts midi notes to MIDI file",
        "tags": [
          "Converter API functions"
        ],
        "requestBody": {
          "required": true,
          "content": {
            "text/plain": {
              "schema": {
                "type": "string"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/nodes/{type}": {
      "get": {
        "summary": "Return active nodes by type",
        "tags": [
          "Nodes API functions"
        ],
        "parameters": [
          {
            "name": "type",
            "in": "path",
            "required": true,
            "description": "node type",
            "schema": {
              "type": "string",
              "enum": ["audio", "recognition"],
              "example": "audio"
            }
          }
        ],
        "description": "API to get active nodes by type",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "document": {
                "schema": {
                  "type": "Node[]",
                  "example": [
                    {
                      "type": "audio",
                      "url": "http://localhost:3000"
                    }
                  ]
                }
              }
            }
          }
        }
      }
    },
    "/nodes/{create-type}": {
      "post": {
        "summary": "Create new nodes by type",
        "tags": [
          "Nodes API functions"
        ],
        "parameters": [
          {
            "name": "create-type",
            "in": "path",
            "required": true,
            "description": "node type",
            "schema": {
              "type": "string",
              "enum": ["audio", "recognition"],
              "example": "audio"
            }
          }
        ],
        "description": "API to create new active node by type",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateNode"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "document": {
                "schema": {
                  "type": "Node",
                  "example": {
                    "type": "audio",
                    "url": "http://localhost:3000"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/nodes/{connect-type}": {
      "put": {
        "summary": "Connect existing nodes by type",
        "tags": [
          "Nodes API functions"
        ],
        "parameters": [
          {
            "name": "connect-type",
            "in": "path",
            "required": true,
            "description": "node type",
            "schema": {
              "type": "string",
              "enum": ["audio", "recognition"],
              "example": "audio"
            }
          }
        ],
        "description": "API to connect existing node by type",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ConnectNode"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "document": {
                "schema": {
                  "type": "Node[]",
                  "example": [
                    {
                      "type": "audio",
                      "url": "http://localhost:3000"
                    }
                  ]
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Song": {
        "type": "object",
        "properties": {
          "length": {
            "type": "string"
          }
        }
      },
      "Node": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string"
          },
          "url": {
            "type": "string"
          }
        }
      },
      "CreateNode": {
        "type": "object",
        "properties": {
          "port": {
            "type": "number"
          }
        }
      },
      "ConnectNode": {
        "type": "object",
        "properties": {
          "url": {
            "type": "string"
          }
        }
      }
    }
  }
}
